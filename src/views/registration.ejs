<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <script src="/js/forms.js" type="text/javascript"></script>
</head>

<body>
    <div class="content-wrapper">

        <header>
            <%- include('./partials/header') %>
        </header>

        <main id="registration-main">
            <div id="registration-form-box">

            <div class="errores"> 
                <ul id="errores-front-validation">
                    
                </ul>
            </div>
                
                                <form action="/users/register" method="POST" id="reg-form" class="registration-form"
                                    enctype="multipart/form-data">
                                    <div class="registration-box">
                                        <label for="names" class="registration-box-label">Nombre y Apellido:</label>
                                        <input type="text" id="names" name="names" class="registration-box-input" value="<%= locals.oldData? oldData.names:null%>">
                                        <% if (locals.errors && errors.names){%>
                                            <p>
                                                <%= errors.names.msg %>
                                            </p>

                                            <% } %>
                                    </div>
                                    <div class="registration-box">
                                        <label for="email" class="registration-box-label">E-Mail:</label>
                                        <input type="email" id="email" name="email" class="registration-box-input" value="<%= locals.oldData? oldData.email:null%>"
                                            >
                                            <% if (locals.errors && errors.email){%>
                                                <p>
                                                    <%= errors.email.msg %>
                                                </p>
                                            
                                                <% } %>
                                    </div>
                                    <div class="registration-box">
                                        <label for="address" class="registration-box-label">Domicilio:</label>
                                        <input type="text" id="address" name="address" class="registration-box-input" value="<%= locals.oldData? oldData.address:null%>"
                                            >
                                            <% if (locals.errors && errors.address){%>
                                                <p>
                                                    <%= errors.address.msg %>
                                                </p>
                                            
                                                <% } %>
                                    </div>
                                    <div>
                                        <label for="image" class="registration-box-label">Imagen</label>
                                        <span class="feedback"></span>
                                        <input type="file" name="image" id="image" accept="image/*,.pdf" >
                                        <% if (locals.errors && errors.image){%>
                                            <p>
                                                <%= errors.image.msg %>
                                            </p>
                                        
                                            <% } %>
                                    </div>

                                    <div class="registration-box">
                                        <label for="password" class="registration-box-label">Contraseña:</label>
                                        <input type="password" name="password" id="password"
                                            class="registration-box-input" >
                                            <% if (locals.errors && errors.password){%>
                                                <p>
                                                    <%= errors.password.msg %>
                                                </p>
                                            
                                                <% } %>
                                    </div>
                                    <div class="registration-box">
                                        <label for="confirmPassword" class="registration-box-label">Confirmar
                                            contraseña:</label>
                                        <input type="password" name="confirmPassword" id="confirmPassword"
                                            class="registration-box-input" >
                                            <% if (locals.errors && errors.confirmPassword){%>
                                                <p>
                                                    <%= errors.confirmPassword.msg %>
                                                </p>
                                            
                                                <% } %>
                                    </div>
                                    <div class="error-text">
                                    </div>
                                    <div class="registration-box">
                                        <button type="submit" id="create-account-button" >Crear cuenta</button>
                                    </div>
                                </form>

            </div>
        </main>
        <footer class="footer">
            <%- include('./partials/footer') %>
        </footer>
    </div>
</body>

</html>