<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <header>
        <%- include('./partials/header') %>
    </header>
    <main class="product-detail-main">
        <section class="product-detail-section">
            <article>
                <h4>
                    <%= product[i].name %>
                </h4>
                <div class="product">
                    <img src="/img/maps/<%= product[i].image %> " alt="Mapa de <%= product[i].continent %> "
                        class="maps" />
                    <p class="des">
                        <%= product[i].description %>
                    </p>
                    <div class="price-icon">
                        <p class="precio">$<%= product[i].price %>
                        </p>
                        <i class="fas fa-truck truck-icon"></i>
                    </div>
                </div>
                <div class="price-icon product-purchase-box">
                    <button type="submit" class="product-detail-button"><a href="/cart"
                            class="product-detail-link">Comprar</a></button>
                    <button type="submit" class="product-detail-button"><a href="/products"
                            class="product-detail-link">+ Carrito</a></button>
                </div>
            </article>
        </section>
    </main>
    <footer class="footer">
        <%- include('./partials/footer') %>
    </footer>

</body>

</html>